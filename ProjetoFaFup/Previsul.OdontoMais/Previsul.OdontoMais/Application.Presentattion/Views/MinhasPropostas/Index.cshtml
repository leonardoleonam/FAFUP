
@{
    ViewData["Title"] = "Efetivacao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid box-content">
    <div class="row">
        <div class="col-sm-12">
            <div class="jumbotron minhas-propostas">
                <img src="assets/img/base/icon_minhas_propostas.png" />
                <h2>Minhas Porpostas</h2>
                <p>
                    Selecione a data de inicio e fim e/ou pré-definido.<br />
                    A busca retorna registro que tenha sido cadastrado e/ou atualizado no período informado.
                </p>
            </div>

            <div id="appFiltroPropostas" class="jumbotron minhas-propostas filtros">
                <div class="row">

                    <div class="col-sm-3">
                        <div class="row">
                            <div class="col-md-4">
                                <select name="" class="form-control">
                                    <option>10</option>
                                    <option>20</option>
                                    <option>50</option>
                                    <option>100</option>
                                </select>
                            </div>
                            <div class="col-md-8 p-0">
                                <label>RESULTADOS POR PÁGINA</label>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-md-4">
                                <input type="text" name="" class="form-control" placeholder="00/00/0000" v-model="dataInicio">
                            </div>
                            <div class="col-md-4">
                                <input type="text" name="" class="form-control" placeholder="00/00/0000" v-model="dataFim">
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-success" v-on:click="buscaPorData">BUSCAR</button>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-5 btn-dias">
                        <button class="btn btn-secondary btn-purple">Últimos 90 dias</button>
                        <button class="btn btn-info">Últimos 30 dias</button>
                        <button class="btn btn-secondary">Últimos 7 dias</button>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="table-scroll">
                <table id="appListaPropostas" class="table table-striped table-bordered table-minhas-propostas">
                    <tr>
                        <th>Protocolo</th>
                        <th>Status</th>
                        <th>Estipulante</th>
                        <th>Planos</th>
                        <th>Total de Vidas</th>
                        <th>Corretor</th>
                        <th>Comissão</th>
                        <th>Data e Hora</th>
                    </tr>
                    <tr v-for="proposta in propostas" v-cloak>
                        <td>{{proposta.Protocolo}}</td>
                        <td>{{proposta.Status}}</td>
                        <td>{{proposta.Estipulante}}</td>
                        <td>{{proposta.Planos}}</td>
                        <td>{{proposta.TotalVidas}}</td>
                        <td>{{proposta.Corretor}}</td>
                        <td>{{proposta.Comissao}}%</td>
                        <td>{{proposta.Data}}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <footer class="footer">
        <br/>
        <p>&copy; @DateTime.Today.Year - Previsul Odonto PME</p>
    </footer>

</div>

<script type="text/javascript" src="~/Assets/js/Main.vue.js"></script>
<script type="text/javascript" src="~/Assets/js/MinhasPropostas.vue.js"></script>
